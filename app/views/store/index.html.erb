<% if notice %>
	<aside id="notice"></aside%= notice %></aside>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<ul class="catalog">
	<% @products.each do |product| %>
		<li>
			<%= image_tag(product.image_url) %>
			<h2><%= product.title %></h2>
			<p><%= sanitize product.description %></p>
			<div class="price"><%= button_to 'Add to Cart', line_items_path(product_id: product) %><%= product.price %></div>
		</li>
	<% end %>
</ul>
